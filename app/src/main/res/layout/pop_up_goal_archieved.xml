<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popGoalAchieved"
    android:layout_width="350dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:background="@drawable/corners_white"
    android:translationZ="5dp"
    >

    <TextView
        android:id="@+id/tvGoalAchieved"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/andika_regular"
        android:text="Â¡Enhorabuena! Has logrado tus objetivos, ahora disfruta de tu recompensa"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/confirmGoalAchieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edge_blue"
        android:fontFamily="@font/andika_bold"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/aceptar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>