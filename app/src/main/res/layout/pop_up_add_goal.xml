<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popUpAddGoal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_trans"
    android:translationZ="5dp">

    <View
        android:id="@+id/addGoalContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/corners_white" />

    <TextView
        android:id="@+id/tvPopUpAddExpense"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@+id/addGoalContainer"
        app:layout_constraintTop_toTopOf="@+id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_regular"
        android:padding="5dp"
        android:text="@string/add_spent"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/closePopUpAddExpend"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintTop_toTopOf="@+id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close" />

    <View
        android:id="@+id/line5"
        app:layout_constraintTop_toBottomOf="@+id/tvPopUpAddExpense"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tvDescripcionGasto"
        app:layout_constraintEnd_toEndOf="@+id/line5"
        app:layout_constraintStart_toStartOf="@+id/line5"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_regular"
        android:padding="5dp"
        android:text="@string/descripcion"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/inputDescripcionGasto"
        app:layout_constraintEnd_toEndOf="@+id/tvDescripcionGasto"
        app:layout_constraintStart_toStartOf="@+id/tvDescripcionGasto"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionGasto"
        tools:text="aaaaa"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/corners_white"
        android:fontFamily="@font/andika_regular"
        android:inputType="textAutoCorrect"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCantidadGasto"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@+id/addGoalContainer"
        app:layout_constraintTop_toBottomOf="@+id/inputDescripcionGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_regular"
        android:padding="5dp"
        android:text="@string/cantidad"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/inputCantidadGasto"
        app:layout_constraintEnd_toEndOf="@+id/tvCantidadGasto"
        app:layout_constraintStart_toStartOf="@+id/tvCantidadGasto"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidadGasto"
        tools:text="50,20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/corners_white"
        android:fontFamily="@font/andika_regular"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTipoGasto"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@+id/addGoalContainer"
        app:layout_constraintTop_toBottomOf="@+id/inputCantidadGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_regular"
        android:padding="5dp"
        android:text="@string/tipo_de_gasto"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/line7"
        app:layout_constraintBottom_toTopOf="@id/cancelNewMember"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@+id/addGoalContainer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/black" />

    <Button
        android:id="@+id/cancelNewMember"
        app:layout_constraintBottom_toBottomOf="@id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corners_buttons"
        android:fontFamily="@font/andika_bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/cancelar"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/addNewMember"
        app:layout_constraintBottom_toBottomOf="@id/addGoalContainer"
        app:layout_constraintEnd_toEndOf="@id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corners_buttons_blue"
        android:fontFamily="@font/andika_bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/add"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>