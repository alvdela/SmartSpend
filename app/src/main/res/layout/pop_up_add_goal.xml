<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popUpAddGoal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_trans"
    android:translationZ="5dp">

    <View
        android:id="@+id/addGoalContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/pop_up" />

    <TextView
        android:id="@+id/tvPopUpAddGoal"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@+id/addGoalContainer"
        app:layout_constraintTop_toTopOf="@+id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_regular"
        android:padding="5dp"
        android:text="@string/nuevo_objetivo"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/closePopUpAddGoal"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintTop_toTopOf="@+id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close" />

    <View
        android:id="@+id/line5"
        app:layout_constraintTop_toBottomOf="@+id/tvPopUpAddGoal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tvDescripcionObjetivo"
        app:layout_constraintEnd_toEndOf="@+id/line5"
        app:layout_constraintStart_toStartOf="@+id/line5"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_regular"
        android:padding="5dp"
        android:text="@string/descripcion"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/inputDescripcionObjetivo"
        app:layout_constraintEnd_toEndOf="@+id/tvDescripcionObjetivo"
        app:layout_constraintStart_toStartOf="@+id/tvDescripcionObjetivo"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionObjetivo"
        tools:text="aaaaa"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/corners_white"
        android:fontFamily="@font/andika_regular"
        android:inputType="textAutoCorrect"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCantidadObjetivo"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@+id/addGoalContainer"
        app:layout_constraintTop_toBottomOf="@+id/inputDescripcionObjetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_regular"
        android:padding="5dp"
        android:text="@string/objetivo"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/inputCantidadObjetivo"
        app:layout_constraintEnd_toEndOf="@+id/tvCantidadObjetivo"
        app:layout_constraintStart_toStartOf="@+id/tvCantidadObjetivo"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidadObjetivo"
        tools:text="50,20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/corners_white"
        android:fontFamily="@font/andika_regular"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="18sp" />


    <View
        android:id="@+id/line7"
        app:layout_constraintBottom_toTopOf="@id/cancelNewGoal"
        app:layout_constraintEnd_toEndOf="@+id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@+id/addGoalContainer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:background="@color/black" />

    <Button
        android:id="@+id/cancelNewGoal"
        app:layout_constraintBottom_toBottomOf="@id/addGoalContainer"
        app:layout_constraintStart_toStartOf="@id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corners_buttons_white"
        android:fontFamily="@font/andika_bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/cancelar"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/addNewGoal"
        app:layout_constraintBottom_toBottomOf="@id/addGoalContainer"
        app:layout_constraintEnd_toEndOf="@id/addGoalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corners_buttons_blue"
        android:fontFamily="@font/andika_bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/add"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>