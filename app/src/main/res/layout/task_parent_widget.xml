<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.SmartSpend.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/appBarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tittleParents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika_regular"
            android:gravity="center"
            android:text="@string/tareas_pendientes"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btAddTask"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_add" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvPendientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:fontFamily="@font/andika_regular"
        android:text="@string/pendientes"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listViewPendientes"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@color/transparent" />


    <TextView
        android:id="@+id/tvCompletadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:fontFamily="@font/andika_regular"
        android:text="@string/completadas"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listViewCompletadas"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@color/transparent"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>
